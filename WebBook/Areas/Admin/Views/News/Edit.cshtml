@model WebBook.ViewModels.CreateNewsVM


@{
    ViewData["Title"] = "Chinh sua tin tuc";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-area="Admin" asp-controller="News" asp-action="Index" class="nav-link">Tin tuc</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link">@ViewData["Title"]</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Them moi tin tuc</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh muc</a></li>
                    <li class="breadcrumb-item active">Them moi</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Them danh muc</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <!-- your steps content here -->
                <form asp-action="Create" asp-controller="News" asp-area="Admin" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Ten danh muc</label>
                        <input asp-for="Title" type="text" class="form-control">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    

                    <div class="form-group">
                        <div class="mb-2">
                            <img class="img-fluid" src="~/thumbnails/@Model.ImageUrl" id="image" />
                        </div>
                        <div class="mb-2">
                            <label>Anh</label>
                            <input type="file" asp-for="Image" class="custom-file" />

                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Chi tiet</label>
                        <textarea asp-for="Detail" class="form-control" rows="17"></textarea>
                        <span asp-validation-for="Detail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Seo title</label>
                        <input asp-for="SeoTitle" type="text" class="form-control">
                        <span asp-validation-for="SeoTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Seo Description</label>
                        <input asp-for="SeoDescription" type="text" class="form-control">
                        <span asp-validation-for="SeoDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Seo Keywords</label>
                        <input asp-for="SeoKeywords" type="text" class="form-control">
                        <span asp-validation-for="SeoKeywords" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" asp-controller="Category" asp-area="Admin" class="btn btn-primary" onclick="stepper.previous()">Previous</a>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>

                </form>

            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".custom-file").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('image').src = window.URL.createObjectURL(this.files[0]);
        });
    </script>
}