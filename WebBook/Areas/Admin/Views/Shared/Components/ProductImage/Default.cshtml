@model IEnumerable<WebBook.Models.ProductImage>

<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active">Image</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        
        <img id="main-image" src="~/uploads/images/product/@Model.FirstOrDefault(x=>x.IsAvatar).ImageName" class="img-fluid" />
        <hr />
        <a class="btn btn-primary btn-sm mb-2" id="upload-img">
            <i class="fas fa-upload"></i>
            <span>Upload Image</span>
        </a>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="text-center">Image</th>
                    <th class="text-center">Avatar</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tbodyHtml">
                @{var currentId = 1;}
                @foreach(var item in Model)
                {
                    currentId = item.Id;
                    <tr id="row-@item.Id">
                        <td>@item.Id</td>
                        <td class="text-center">
                            <img id="image-@item.Id" width="100" src="~/uploads/images/product/@item.ImageName" />
                        </td>
                        <td class="text-center">
                            <div class="icheck-success d-inline">
                                @if(item.IsAvatar){
                                    <input type="radio" checked name="isDefault" class="rdoDefault" id="rdo-@item.Id">
                                }
                                else{
                                    <input type="radio" name="isDefault" class="rdoDefault" id="rdo-@item.Id">
                                }
                               
                                <label for="rdo-@item.Id"></label>
                            </div>
                        </td>
                        <td class="pt-3">
                            <a id="deleteImage" data-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

                @*<input type="file" name="Avatar" class="imgFile" id="custom-file-1" style="display: none" />
                <tr id="row-1">
                    <td>1</td>
                    <td class="text-center">
                        <img id="image-1" width="100" src="~/uploads/images/product/@Model.Avatar" />
                    </td>
                    <td class="text-center">
                        <div class="icheck-success d-inline">
                            <input type="radio" checked name="isDefault" value="1" class="rdoDefault" id="rdo-1">
                            <label for="rdo-1"></label>
                        </div>
                    </td>
                    <td class="pt-3">
                        <a id="deleteImage" data-id="1" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                @{
                    var id = 1;
                }
                @if (@Model.ListImages != null)
                {
                    id = 2;
                    foreach (var item in @Model.ListImages)
                    {
                        <input type="file" name="Files" class="imgFile" id="custom-file-@id" style="display: none" />
                        <tr id="row-@id">
                            <td>@id</td>
                            <td class="text-center">
                                <img id="image-@id" width="100" src="~/uploads/images/product/@item" />
                            </td>
                            <td class="text-center">
                                <div class="icheck-success d-inline">
                                    <input type="radio" name="isDefault" value="@id" class="rdoDefault" id="rdo-@id">
                                    <label for="rdo-@id"></label>
                                </div>
                            </td>
                            <td class="pt-3">
                                <a id="deleteImage" data-id="@id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        id++;
                    }
                }*@

            </tbody>
        </table>
        <input id="currentId" value="@currentId" type="hidden" />
    </div>
</div>

