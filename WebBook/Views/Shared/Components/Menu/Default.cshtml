            @if (loggedInUser != null)
            {
                <li class="menu_item has-children">
                    <a href="#">
                        @loggedInUser.UserName
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="menu_selection">
                        <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-in" aria-hidden="true"></i>Logout</a></li>
                        <li><a asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
                    </ul>
                </li>
            }
            else
            {
                <li class="menu_item has-children">
                    <a href="#">
                        My Account
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="menu_selection">
                        <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in" aria-hidden="true"></i>Sign In</a></li>
                        <li><a asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
                    </ul>
                </li>
            }
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <li class="menu_item"><a href="/@item.Slug">@item.Name</a></li>
                }
            }
        </ul>
    </div>
